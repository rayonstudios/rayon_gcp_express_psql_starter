{
  "name": "rayon_express_psql_starter",
  "version": "2.0",
  "description": "Rayon GCP Express PSQL Starter is an opinionated starter kit designed to scaffold backend projects quickly with a wide range of pre-configured features, built-in best practices, and \"batteries included.\" It leverages Google Cloud Platform for deployment and Prisma for database management, allowing you to focus on building functionality.",
  "scripts": {
    "tsoa": "tsoa spec-and-routes",
    "setup": "npm run env:fetch && npm run prisma:pull && ts-node ./scripts/schema-transform && npm run prisma:format && npm run prisma:generate && npm run tsoa",
    "build": "npm run setup && tsc && tsc-alias",
    "local": "npm run setup && concurrently \"nodemon server.ts\" \"nodemon -x tsoa spec-and-routes\"",
    "dev": "cross-env NODE_ENV=dev npm run local",
    "test": "cross-env NODE_ENV=test npm run local",
    "prod": "cross-env NODE_ENV=production npm run local",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "start": "node ./dist/server.js",
    "deploy": "npm run build && gcloud app deploy",
    "watch:types": "tsc -w",
    "env:fetch": "ts-node ./scripts/load-secrets",
    "env:replace": "ts-node ./scripts/env-replace",
    "prisma:pull": "prisma db pull",
    "prisma:generate": "prisma generate",
    "prisma:format": "prisma format",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "prepare": "husky install",
    "schema:init": "cross-env NODE_ENV=production npm run env:fetch && ts-node ./scripts/xata-initialize",
    "sync:migrations": "ts-node ./scripts/sync-migrations",
    "create:superadmin": "ts-node ./scripts/create-super-admin"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "imports": {
    "#/*": "./*"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "routes.ts",
      "swagger.json"
    ],
    "ext": "ts"
  },
  "dependencies": {
    "@google-cloud/tasks": "^5.5.2",
    "@prisma/client": "5.20.0",
    "@sendinblue/client": "^3.3.1",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "firebase-admin": "^12.6.0",
    "hcaptcha": "^0.2.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5",
    "strip": "^3.0.0",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsoa": "^6.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5",
    "@types/cors": "^2",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9",
    "@types/lodash": "^4.17.15",
    "@types/morgan": "^1",
    "@types/node": "^22.7.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yargs": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "prisma": "5.20.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.6.3",
    "yargs": "^18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
